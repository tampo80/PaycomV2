@inherits LayoutComponentBase

<MudContainer MaxWidth="MaxWidth.Small">
    <div class="d-flex flex-column">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 500 400" width="550" height="371.84"
             style="margin-top:25%;">
            <!-- Developer working on code -->
            <!-- Computer/Monitor -->
            <rect x="150" y="120" width="200" height="150" rx="5" fill="#444" />
            <rect x="160" y="130" width="180" height="115" fill="#222" />
            <!-- Code on screen -->
            <line x1="170" y1="145" x2="240" y2="145" stroke="#3eaf7c" stroke-width="3" />
            <line x1="170" y1="160" x2="300" y2="160" stroke="#3eaf7c" stroke-width="3" />
            <line x1="170" y1="175" x2="260" y2="175" stroke="#3eaf7c" stroke-width="3" />
            <line x1="190" y1="190" x2="270" y2="190" stroke="#3eaf7c" stroke-width="3" />
            <line x1="190" y1="205" x2="320" y2="205" stroke="#3eaf7c" stroke-width="3" />
            <line x1="170" y1="220" x2="280" y2="220" stroke="#3eaf7c" stroke-width="3" />
            <!-- Monitor stand -->
            <rect x="220" y="270" width="60" height="10" fill="#444" />
            <rect x="235" y="280" width="30" height="20" fill="#444" />
            <!-- Desk -->
            <rect x="100" y="300" width="300" height="15" rx="2" fill="#259a65" />
            <!-- Coffee mug -->
            <rect x="350" y="270" width="30" height="30" rx="3" fill="#666" />
            <rect x="380" y="275" width="10" height="15" rx="3" fill="#666" />
            <!-- Gear icons (for development) -->
            <circle cx="100" cy="100" r="30" fill="none" stroke="#3eaf7c" stroke-width="5" />
            <circle cx="100" cy="100" r="15" fill="none" stroke="#3eaf7c" stroke-width="3" />
            <circle cx="400" cy="100" r="35" fill="none" stroke="#259a65" stroke-width="5" />
            <circle cx="400" cy="100" r="20" fill="none" stroke="#259a65" stroke-width="3" />
            <!-- Progress bar -->
            <rect x="150" y="330" width="200" height="20" rx="10" fill="#ddd" />
            <rect x="150" y="330" width="140" height="20" rx="10" fill="#3eaf7c" />
        </svg>
        <MudText Typo="Typo.h5" Class="mt-6" Align="Align.Center">En cours de développement</MudText>
        <MudText Typo="Typo.body1" Class="mt-2" Align="Align.Center">Nous travaillons activement sur cette page.</MudText>
        <div class="mt-6" style="display: flex; justify-content: center; align-items: center;">
            <MudButton DropShadow="false" Variant="Variant.Filled" Size="Size.Large" Href="/">Retour à l'accueil</MudButton>
        </div>
    </div>
</MudContainer>

