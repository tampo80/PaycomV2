@page "/identity/users"

<PageHeader Title="Utilisateurs" Header="Utilisateurs" SubHeader="Gérer les utilisateurs." />

<EntityTable TEntity="UserDetail" TId="Guid" TRequest="RegisterUserCommand" Context="@Context">
    <ExtraActions>
        <MudMenuItem OnClick="(() => ViewProfile(context.Id))">Voir le profil</MudMenuItem>
        @if (_canViewRoles)
        {
        <MudMenuItem OnClick="(() => ManageRoles(context.Id))">Gérer les rôles</MudMenuItem>
        }
        @if (_canViewAuditTrails)
        {
        <MudMenuItem OnClick="(() => ViewAuditTrails(context.Id))">Voir les journaux d’audit</MudMenuItem>
        }
    </ExtraActions>

    <EditFormContent>
        <MudItem xs="12" md="6">
            <MudTextField For="@(() => context.UserName)" @bind-Value="context.UserName" Label="Nom d'utilisateur" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField For="@(() => context.FirstName)" @bind-Value="context.FirstName" Label="Prénom" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField For="@(() => context.LastName)" @bind-Value="context.LastName" Label="Nom de famille" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField For="@(() => context.Email)" InputType="InputType.Email" @bind-Value="context.Email"
                          Label="E-mail" />
        </MudItem>
        <MudItem xs="12" md="12">
            <MudTextField For="@(() => context.PhoneNumber)" @bind-Value="context.PhoneNumber"
                          Label="Numéro de téléphone" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField For="@(() => context.Password)" @bind-Value="context.Password" Label="Mot de passe"
                          InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon"
                          OnAdornmentClick="TogglePasswordVisibility" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField For="@(() => context.ConfirmPassword)" @bind-Value="context.ConfirmPassword"
                          Label="Confirmer le mot de passe" InputType="InputType.Password" />
        </MudItem>
    </EditFormContent>

</EntityTable>